
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayoutPage.cshtml";
}

@model News.UI.Areas.Member.Models.VM.ArticleDetailVM


<br />

<section class="content">
    <div class="row">
        <div class="col-md-10">
            @foreach (var item in Model.Articles)
            {
                <div class="box box-widget">
                    <div class="box-header with-border">
                        <div class="user-block">
                            <img class="img-circle" src="@item.AppUser.UserImage" alt="User Image">
                            <span class="username"><a href="#">@item.AppUser.FirstName @item.AppUser.LastName</a></span>
                            <span class="description">@item.Header - @item.PublishDate</span>
                        </div>
                    </div>

                    <div class="box-body">

                        @if (item.Content.Length >= 300)
                        {
                            @item.Content.Substring(0, 300);
                            <span><a href="/Member/Article/Show/@item.ID">Read...</a></span>
                        }
                        else
                        {
                            @item.Content;
                            <span><a href="/Member/Article/Show/@item.ID">Read...</a></span>
                        }

                    </div>
                    <!-- Box Comment -->
                    <!-- /.box -->
                </div>
            }
            <!-- /.col -->
        </div>

    </div>
</section>
