
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}

@model List<News.Model.Option.Category>

<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="/Admin/Home/Index"><i class="fa fa-home"></i> Home</a></li>
        <li> / </li>
        <li><a href="/Admin/Category/Add">Add Category</a></li>
        <li> / </li>
        <li class="active">Category List </li>
    </ol>
</section>

<br />

<div class="container mt-2">
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <td>Category Name</td>
                            <td>Description</td>
                            <td>Update</td>
                            <td>Delete</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td><a href="/Admin/Category/Update/@item.ID" type="button" class="btn btn-block btn-warning">Update</a></td>
                            <td><a href="/Admin/Category/Delete/@item.ID" type="button" class="btn btn-block btn-danger">Delete</a></td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
