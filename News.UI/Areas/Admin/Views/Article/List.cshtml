
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}

@model List<News.Model.Option.Article>

<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="/Admin/Home/Index"><i class="fa fa-home"></i> Home</a></li>
        <li> / </li>
        <li><a href="/Admin/Article/Add">Add Article</a></li>
        <li> / </li>
        <li class="active">List Of Articles </li>
    </ol>
</section>

<br />

<div class="container mt-2">
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th>Header</th>
                            <th>Content</th>
                            <th>Publish Date</th>
                            <th>Category Name</th>
                            <th>SubCategory Name</th>
                            <th>User Name</th>
                            <td>Image</td>
                            <th>Update</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.Header</td>
                            <td>@item.Content</td>
                            <td>@item.PublishDate</td>
                            <td>@item.SubCategory.Category.Name</td>
                            <td>@item.SubCategory.Name</td>
                            <td>@item.AppUser.UserName</td>
                            <td>
                                <img src="@item.ImagePath" style="display:block" width="75" height="75" />
                            </td>
                            <td><a href="/Admin/Article/Update/@item.ID" type="button" class="btn btn-block btn-warning">Update</a></td>
                            <td><a href="/Admin/Article/Delete/@item.ID" type="button" class="btn btn-block btn-danger">Delete</a></td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
