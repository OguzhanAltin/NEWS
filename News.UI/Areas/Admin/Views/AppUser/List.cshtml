
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}

@model List<News.Model.Option.AppUser>

<div class="container mt-2">
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>User Name</th>
                            <th>E-Mail</th>
                            <th>Password</th>
                            <th>Gender</th>
                            <th>Role</th>
                            <th>Image</th>
                            <th>Update</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.FirstName</td>
                                <td>@item.LastName</td>
                                <td>@item.UserName</td>
                                <td>@item.Email</td>
                                <td>@item.Password</td>
                                <td>@item.Gender</td>
                                <td>@item.Role</td>
                                <td>
                                    <img src="@item.XSmallUserImage" />
                                </td>
                                <td>
                                    <a href="/Admin/AppUser/Update/@item.ID" type="button" class="btn btn-sm btn-warning">Update</a>
                                </td>
                                <td>
                                    <a href="/Admin/AppUser/Delete/@item.ID" type="button" class="btn btn-sm btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

